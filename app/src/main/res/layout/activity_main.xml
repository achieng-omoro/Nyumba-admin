<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/komarock1"
        android:background="@color/blue"
        android:layout_width="155dp"
        android:layout_height="59dp"
        android:layout_marginTop="80dp"
        android:text="KOMAROCK PHASE 1"
        app:layout_constraintBottom_toTopOf="@+id/komarock2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/komarock2"
        android:layout_width="155dp"
        android:layout_height="59dp"
        android:layout_marginBottom="68dp"
        android:background="@color/blue"
        android:text="KOMAROCK PHASE 2"
        app:layout_constraintBottom_toTopOf="@+id/komarock3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/komarock3"
        android:layout_width="155dp"
        android:background="@color/blue"
        android:layout_height="59dp"
        android:layout_marginBottom="88dp"
        android:text="KOMAROCK PHASE 3"
        app:layout_constraintBottom_toTopOf="@+id/komarock4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/komarock4"
        android:layout_width="155dp"
        android:layout_height="59dp"
        android:background="@color/blue"
        android:layout_marginBottom="128dp"
        android:text="KOMAROCK PHASE 4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>